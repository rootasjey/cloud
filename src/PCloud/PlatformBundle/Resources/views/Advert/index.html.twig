				</div>

				<!-- CONTENU -->
				<div class="middle-content">
					<!-- FICHIERS, UTILISATEURS & GROUPES -->
					<div class="categories">
						<div class="square" func="files">
							<img class="square-icon" src="{{ asset('bundles/cloud/icon/file-icon.png')}}" alt="files" />
