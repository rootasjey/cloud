						<div class="square" func="users">
							<img class="square-icon" src="{{ asset('bundles/cloud/icon/usersgroups-icon.png')}}" alt="files" />
							<span class="square-bottom-text">Users</span>
						</div>
						<div class="square" func="usersgroups">
							<img class="square-icon" src="{{ asset('bundles/cloud/icon/user-icon.png')}}" alt="files" />
							<span class="square-bottom-text">Users Groups</span>
						</div>
					</div>

					<!-- FICHIERS -->
					<div class="categorie-panel" id="files-panel">
						<span class="title-panel">FILES</span>
						<img class="icon-button" func="closepanel" src="{{ asset('bundles/cloud/icon/cancel-white-icon.png') }}" alt="cancel" />
					</div>

					<!-- GROUPES DE FICHIERS -->
					<div class="categorie-panel" id="filesgroups-panel">
						<span class="title-panel">FILES GROUPS</span>
						<img class="icon-button" func="closepanel" src="{{ asset('bundles/cloud/icon/cancel-white-icon.png') }}" alt="cancel" />
					</div>

					<!-- UTILISATEURS -->
					<div class="categorie-panel" id="users-panel">
						<span class="title-panel">USERS</span>
