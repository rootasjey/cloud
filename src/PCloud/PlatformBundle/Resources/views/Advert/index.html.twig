<!DOCTYPE html>
<html>
	<head>
		<title>Cloud</title>
		<script src="{{ asset('bundles/cloud/js/jquery-2.1.1.min.js')}}"></script>
		<script src="{{ asset('bundles/cloud/js/main.js')}}"></script>
		<link href="{{ asset('bundles/cloud/css/style.css') }}" rel="stylesheet" />
		<link href="{{ asset('bundles/cloud/css/index.css') }}" rel="stylesheet" />
		<link rel="icon" type="icon/ico" href="{{ asset('favicon.ico') }}">
	</head>

	<body>
		<div class="main-ui">
			<div class="header">
				<div class="menu">
					<img class="menu-item" func="search" src="{{ asset('bundles/cloud/icon/search.png') }}" alt="search" />
					<img class="menu-item" func="help" src="{{ asset('bundles/cloud/icon/help-filled.png') }}" alt="help" />
				</div>

				<div class="title">CLOUD</div>
				<div class="subtitle">A more personal one</div>
			</div>

			<div class="middle">
				<!-- MESSAGE PANEL -->
				<div class="message-panel">
					<!-- Close icon -->
					<!-- <img class="icon" src="{{ asset('bundles/cloud/icon/cancel-white.png') }}" alt="cancel" /> -->

					<div class="message-panel-content">
						<!-- Message pane's content goes there -->
					</div>
				</div>

				<!-- SEARCH PANEL	 -->
				<div class="search-panel">
					<form id="searchform" action="/" method="post">
						<div class="form-title">Search files and folders</div>
						<img class="icon-button" func="closepanel" src="{{ asset('bundles/cloud/icon/cancel-white.png') }}" alt="cancel" />
						<input type="text" name="searchquery">
						<input type="submit" name="valid" value="SEARCH">
					</form>
				</div>


				<!-- CONNECTION FORM -->
				<form id="userform" action="/cloud/web/app_dev.php/signup/" method="post">
					<img src="{{ asset('bundles/cloud/icon/lock.png') }}" alt="search" class="icon"/>

					<!-- LOGIN INPUT -->
					<span class="title">login</span>
					<input type="text" name="login" placeholder="John">

					<!-- PASSWORD INPUT -->
					<span class="title">password</span>
					<input type="password" name="password" placeholder="superpassword">

					<!-- EMAIL INPUT -->
					<div class="signup-section">
						<span class="title">email</span>
						<input type="email" name="email" placeholder="johnreese@mail.com">
					</div>

					<!-- SUBMIT BUTTON -->
					<input type="submit" name="valid" value="OKAY">
					<div class="button-function" func="signup" isactive="false">Don't have an account yet?</div>

				</form>
			</div>

			<!-- FOOTER -->
			<div class="bottom">
				<div class="text">
					<span>Development 2014 - 2015 // <a href="https://github.com/rootasjey/cloud">See on GitHub</a> </span><br>
					<span>An Open Source Versailles' University Project by Master students</span> <br>
				</div>
			</div>
		</div>

		{% if users is defined %}
			{{ users.name }}
		{% endif %}
	</body>
</html>
